<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeStep.PairPage">

    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Pair"
           HorizontalOptions="CenterAndExpand"
           FontSize="40"
           TextColor="White"/>

        </StackLayout>
    </NavigationPage.TitleView>
    
    <StackLayout Spacing="1">
        <!-- Header -->
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="20" CornerRadius="0">
                <Label Text="Pair" HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Start" TextColor="White" FontSize="36"/>
            </Frame>
        </StackLayout>
        <!-- Current Status -->
        <Label Text="WIP" FontSize="Title" HorizontalTextAlignment="Center"/>
    </StackLayout>





</ContentPage>