<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeStep.MainPage"
             Title="Safe Step">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Content -->
        <StackLayout Grid.Row="0">
            <Label Text="Hello" HorizontalOptions="Center" VerticalOptions="Center" FontSize="50"> </Label>
            <!-- Your current content here -->
        </StackLayout>

        <!-- Bottom Navigation Bar -->
        <StackLayout Grid.Row="1" Orientation="Horizontal" BackgroundColor="#2195f3" HorizontalOptions="Center">
            <ImageButton Clicked="NavigateToStatus" Source="status.png" Aspect="AspectFit" Scale="0.5"/>
            <ImageButton Clicked="NavigateToLocate" Source="locate.png" Aspect="AspectFit" Scale="0.5"/>
            <ImageButton Clicked="NavigateToPair" Source="pair.png" Aspect="AspectFit" Scale="0.5"/>
            <ImageButton Clicked="NavigateToSettings" Source="settings.png" Aspect="AspectFit" Scale="0.5"/>
        </StackLayout>

    </Grid>
</ContentPage>
