<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="TabbedPageSample.PairPage">

    
    <ScrollView>
        <VerticalStackLayout 
            Spacing="20"
            Padding="40,0" 
            VerticalOptions="Center"
            >

            <!-- Various Settings -->
            <Label 
                FontSize="35" 
                Text="Last Set Contact"
                HorizontalOptions="Center"
                />

            <Label 
                x:Name="lastContactName"
                Text="John Smith"
                HorizontalOptions="Center"
                />
            <Label 
                x:Name="lastContactNumber"
                Text="+1 000 000 0000 "
                HorizontalOptions="Center"
                />
            <Label 
                x:Name="lastContactAddr"
                Text="75 B. S. Hood Rd, Mississippi State, MS 39762"
                HorizontalOptions="Center"
                />
            
            <Button
                Text="Change Contact Information"
                FontSize="25"
                Clicked="openNFCControl"
                />
            



        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
