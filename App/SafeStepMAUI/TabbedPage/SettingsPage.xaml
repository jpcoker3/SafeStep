<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="TabbedPageSample.SettingsPage">

    <ScrollView>
        <StackLayout Spacing="20" Padding="40,0" VerticalOptions="CenterAndExpand">

            <!-- App Settings Section -->
            
            <TableView>
                <TableSection Title="Settings">
                    <SwitchCell Text="Option 1" On="true" />
                    <SwitchCell Text="Option 2" On="false" />
                    <SwitchCell Text="Option 3" On="true" />
                </TableSection>

                <TableSection Title="About">
                    <TextCell Text="Version Information"
                    Detail="0.9.0" />

                </TableSection>
                
                <TableSection Title="Credits">
                    <TextCell Text="Joseph Coker" TextColor="Gray" />
                    <TextCell Text="Emily Miller" TextColor="Gray" />
                    <TextCell Text="Colby Stevens" TextColor="Gray" />
                    <TextCell Text="Ryan Harper" TextColor="Gray" />
                </TableSection>
                
            </TableView>



        
            

        </StackLayout>
    </ScrollView>
</ContentPage>